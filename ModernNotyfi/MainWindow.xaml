                <wpfui:Button Appearance="Secondary" x:Name="Audio_settings" Margin="193,7,57,8" Foreground="{x:Null}" Background="{x:Null}" BorderThickness="0" Padding="0" Height="56" BorderBrush="{x:Null}" Cursor="Hand" Click="On_OFF_Audio" Style="{DynamicResource DefaultButtonStyle}">
