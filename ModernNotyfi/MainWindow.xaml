                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                    <Grid>
                        <Image x:Name="Battery" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="20" Source="icons/battery_full.png"/>
