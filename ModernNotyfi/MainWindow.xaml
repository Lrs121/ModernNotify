                        <Grid>
                            <wpfui:Icon Foreground="{DynamicResource Button.Static.Background}" x:Name="MN_Connect_Icon" Glyph="PhoneDesktop28" FontSize="22" Height="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="22" Background="Black" Margin="0,19,0,0" VerticalAlignment="Top"/>
                        </Grid>
                    </wpfui:Card>
                </wpfui:Button>

                <wpfui:Button Appearance="Secondary" x:Name="Wifi_settings" FontFamily="Century Gothic" Foreground="{x:Null}" Background="{x:Null}" BorderThickness="0" Padding="0" Margin="8,7,241,8" Height="56" BorderBrush="{x:Null}" Cursor="Hand" Click="WIFI_settings_ON_OFF" Style="{DynamicResource DefaultButtonStyle}" Grid.RowSpan="1">
                    <ToggleButton x:Name="WiFi_Color" IsChecked="True" Padding="0,0,0,0" Height="56" VerticalAlignment="Top">
