                <SolidColorBrush Color="#fff" Opacity="0.7"/>
            </Border.Background>
            <Grid>

                <Button x:Name="Clock_Open" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="93" Height="30" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="0" Click="Clock_Open_Panel">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                    <Grid Margin="0,-5,0,0">
                        <Label x:Name="DateTimeText" Content="........." HorizontalAlignment="Left" Margin="2,2,0,-2" VerticalAlignment="Top" Height="28" Width="60" FontSize="20" FontWeight="Bold" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
                        <Label x:Name="DateTimeText_sec" Content="..." HorizontalAlignment="Left" Margin="63,2,0,-3" VerticalAlignment="Top" Height="29" Width="26" FontWeight="Bold" Padding="0,0,0,3" VerticalContentAlignment="Bottom"/>
