                        <wpfui:Card Padding="0,0,0,0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Width="88" Height="57">
                            <Grid>
                                <Label x:Name="Audio_Settinds_text" Content="Звук" Foreground="{DynamicResource Button.Static.Background}"  FontFamily="./icons/Fonts/#Google Sans Medium" HorizontalAlignment="Left" VerticalAlignment="Center" Width="37" Height="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" Margin="36,0,0,0"/>
                                <wpfui:Icon Foreground="{DynamicResource Button.Static.Background}" Glyph="Speaker224" FontSize="26" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="27" Margin="9,0,0,0" HorizontalAlignment="Left"/>
                            </Grid>
                        </wpfui:Card>
                    </ToggleButton>
                </wpfui:Button>

                <wpfui:Button Appearance="Secondary" x:Name="Bluetooth_settings" FontFamily="Century Gothic" Foreground="{x:Null}" Background="{x:Null}" BorderThickness="0" Padding="0" Margin="99,7,148,8" Height="56" BorderBrush="{x:Null}" Cursor="Hand" Style="{DynamicResource DefaultButtonStyle}" Click="Bluetooth_settings_Click">
                    <ToggleButton x:Name="Bluetooth_Settings_Color" IsChecked="True" Padding="0,0,0,0" Height="56" VerticalAlignment="Top">
                        <wpfui:Card Padding="0,0,0,0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Width="88" Height="57">
                            <Grid>
                                <Label x:Name="Bluetooth_Settinds_text" Content="Bluetooth" Foreground="{DynamicResource Button.Static.Background}"  FontFamily="./icons/Fonts/#Google Sans Medium" HorizontalAlignment="Left" Margin="27,0,0,0" VerticalAlignment="Center" Width="52" Height="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" FontStyle="Normal" FontWeight="Normal" FontStretch="Normal" FontSize="11"/>
                                <wpfui:Icon Foreground="{DynamicResource Button.Static.Background}" Glyph="Bluetooth24" FontSize="30" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="33" HorizontalAlignment="Left"/>
                            </Grid>
                        </wpfui:Card>
                    </ToggleButton>
                </wpfui:Button>

                <Button x:Name="settings_Copy" FontFamily="Century Gothic" Foreground="{x:Null}" Background="{x:Null}" BorderThickness="0" Padding="0" Margin="236,8,29,6" BorderBrush="{x:Null}" Cursor="Hand" Style="{DynamicResource DefaultButtonStyle}" Click="Bluetooth_settings_Click" Visibility="Hidden" Height="56">
                    <Border x:Name="Color_Border" CornerRadius="5,5,5,5"  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="54" VerticalAlignment="Center" Width="70" Background="Gainsboro">
                        <Grid>
                            <Label x:Name="Settinds_text2" Content="..." HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Width="60" Foreground="Black" Height="17" FontSize="12" HorizontalContentAlignment="Center"/>
                            <Image HorizontalAlignment="Center" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" Width="30" Source="/icons/color.png"/>
                        </Grid>
                    </Border>
                </Button>
            </Grid>
        </Border>
        <Border x:Name="SoundBorder" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="70" Margin="10,0,0,144" VerticalAlignment="Bottom" Width="340" CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Color="#fff" Opacity="0.7"/>
            </Border.Background>
            <Grid>
                <Label Foreground="{DynamicResource Button.Static.Background}" x:Name="SoundText" Content="Настройки звука" HorizontalAlignment="Left" Margin="19,10,0,0" FontSize="12" Height="16" VerticalAlignment="Top" Padding="0,0,5,0"/>
                <wpfui:Icon Foreground="{DynamicResource Button.Static.Background}" FontSize="24" Glyph="Speaker248" HorizontalAlignment="Left" Margin="16,32,0,0" VerticalAlignment="Top"/>
                <Button Foreground="{DynamicResource Button.Static.Background}" FontFamily="./icons/Fonts/#Google Sans Medium" x:Name="SoundDevice" Content="Колонки" HorizontalAlignment="Right" Margin="0,8,23,0" VerticalAlignment="Top" Width="181" FontSize="12" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Height="22" Padding="3,0,5,3" Cursor="Hand" Click="SoundDevice_Click" Grid.RowSpan="1" Grid.ColumnSpan="1"/>
                <ListBox x:Name="AudioDevice" Height="75" Margin="19,68,19,0" VerticalAlignment="Top" SelectedIndex="0" IsSynchronizedWithCurrentItem="False" Width="300" SelectionChanged="AudioDevice_SelectionChanged" Background="{x:Null}"/>
                <ProgressBar x:Name="ValueVolumeBar" HorizontalAlignment="Left" Margin="50,40,0,0" VerticalAlignment="Top" Width="268" Value="100" Height="10" MinHeight="6" Foreground="#FFFFA400"/>
                <Slider x:Name="SoundSlider" Height="26" Margin="47,34,21,0" VerticalAlignment="Top" ValueChanged="SoundSlider_ValueChanged" Maximum="100" Width="270" BorderThickness="10,0,10,0" Background="{x:Null}" Foreground="{x:Null}"/>

            </Grid>
        </Border>
        <Border x:Name="Border_Shutdown" Visibility="Hidden" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="125" Margin="142,323,0,0" VerticalAlignment="Top" Width="167" CornerRadius="5" Background="White">
            <Grid>
                <Grid Height="Auto" Margin="0">
                    <wpfui:Button BorderBrush="#1900D6FF" Click="Command_shutdown" Height="38" HorizontalAlignment="Center" Padding="0,0,0,0" Width="181" Margin="0,4,0,0" VerticalAlignment="Top" Background="{x:Null}">
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="137">
                            <Image Source="icons/shutdown_fluent.png" HorizontalAlignment="Left" Margin="0,2" Width="17"/>
                            <Label x:Name="TextShutdown" Content="Выключение ПК" Margin="17,0,-33,0" Padding="5,0,0,2"/>
                        </Grid>
                    </wpfui:Button>

                    <wpfui:Button  BorderBrush="#1900D6FF" Click="Command_Restart" Height="38" HorizontalAlignment="Center" Padding="0,0,0,0" Width="175" Background="{x:Null}">
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="137">
                            <Image Source="icons/restart_fluent.png" HorizontalAlignment="Left" Margin="0,2" Width="17"/>
                            <Label x:Name="TextRestartPC" Content="Перезагрузка ПК" Margin="17,0,-35,0" Padding="5,0,0,2"/>
                        </Grid>
                    </wpfui:Button>
                    <wpfui:Button BorderBrush="#1900D6FF" Click="Command_Exit" Height="38" HorizontalAlignment="Center" Padding="0,0,0,0" Width="181" Margin="0,81,0,0" VerticalAlignment="Top" Background="{x:Null}" >
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="137">
                            <Image Source="icons/exit.png" HorizontalAlignment="Left" Margin="0,2" Width="17"/>
                            <Label x:Name="EXITtextPROGRAM" Content="Выкл. панель" Margin="17,0,10,0" Padding="5,0,0,2"/>
                        </Grid>
                    </wpfui:Button>
                </Grid>
            </Grid>
        </Border>
        <Border x:Name="Border_Music" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="51" Margin="10,230,0,0" VerticalAlignment="Top" Width="340" CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Color="#fff" Opacity="0.7"/>
            </Border.Background>
            <Grid>
                <wpfui:Button x:Name="Play_Pause" Margin="267,9,41,10" VerticalAlignment="Stretch" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="0" Width="30" Click="Play_Pause_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                    <wpfui:Icon Glyph="Play12" FontSize="24" x:Name="PlayIcon" Foreground="{DynamicResource Button.Static.Background}"/>
                </wpfui:Button>
                <wpfui:Button x:Name="Music_Right" Margin="295,9,0,10" VerticalAlignment="Stretch" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="0" Width="30" Opacity="0.95" Click="Music_Right_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                    <wpfui:Icon Foreground="{DynamicResource Button.Static.Background}" Glyph="Next16" />
                </wpfui:Button>
                <wpfui:Button x:Name="Music_Left" Margin="233,9,75,10" VerticalAlignment="Stretch" Width="30" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="0" Opacity="0.75" Click="Music_Left_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                    <wpfui:Icon Foreground="{DynamicResource Button.Static.Background}" Glyph="Previous16" />
                </wpfui:Button>
                <wpfui:Button x:Name="Music_About" Height="49" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="3" Click="Music_About_Click" Style="{DynamicResource DefaultButtonStyle}" Margin="0,0,105,0">
                    <Grid Height="39" HorizontalAlignment="Left" VerticalAlignment="Center" Width="223">
                        <Grid x:Name="SoundGridContent" Margin="0,0,10,0">
                            <Label Foreground="{DynamicResource Button.Static.Background}"  FontFamily="./icons/Fonts/#Samsung Sharp Sans" x:Name="NowPlayning" Content="Музыка" Margin="35,0,0,0" FontSize="15" VerticalContentAlignment="Center" FontWeight="Bold" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="191" Padding="0,0,0,0"/>
                            <Image x:Name="MusicPlayer" HorizontalAlignment="Left" Height="26" Margin="4,0,0,0" VerticalAlignment="Center" Width="24" Source="/icons/Media/notes.png"/>
                            <Label Foreground="{DynamicResource Button.Static.Background}" x:Name="NowPlayning_Autor" Content="Очередь пуста." HorizontalAlignment="Left" Margin="35,0,0,3" FontSize="12" Width="183" VerticalContentAlignment="Center" Height="16" VerticalAlignment="Bottom" Padding="0,0,0,0"/>
                        </Grid>
                    </Grid>
                </wpfui:Button>
            </Grid>
        </Border>
        <Border x:Name="MainPanel" BorderBrush="Black" BorderThickness="1" Margin="366,6,10,10" Background="#B2FFFFFF" CornerRadius="5">
            <Grid>
                <TabControl x:Name="Full_Panel_Tab" Margin="10,-76,10,-30" TabStripPlacement="Bottom" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <TabItem Header="Battery_Tab" Margin="4,-216,-4,216" Background="#00000000" BorderBrush="{x:Null}" Foreground="{x:Null}">
                        <Grid x:Name="Battery_Tab">
                            <Label Foreground="{DynamicResource Button.Static.Background}" FontFamily="./icons/Fonts/#Google Sans Medium" x:Name="text_bbss" Content="Заряд батареи" HorizontalAlignment="Left" Margin="12,18,0,440" Width="115" Padding="0,0,0,0"/>
                            <Label Foreground="{DynamicResource Button.Static.Background}" FontFamily="./icons/Fonts/#Google Sans Medium" x:Name="BatteryState" Content="100%" HorizontalAlignment="Left" Margin="13,30,0,404" FontSize="36" Width="120" FontWeight="Bold" Padding="0,0,0,0"/>
                            <Label Foreground="{DynamicResource Button.Static.Background}" FontFamily="./icons/Fonts/#Google Sans Medium" x:Name="Battery_Status" Content="Заряжается" Margin="0,35,10,426" FontSize="14" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Width="131" Padding="0,0,0,0"/>
                            <Label Foreground="{DynamicResource Button.Static.Background}" FontFamily="./icons/Fonts/#Google Sans Medium" Content="Статус:" HorizontalAlignment="Right" Margin="0,20,10,442" Width="131" HorizontalContentAlignment="Right" Padding="0,0,0,0"/>
                            <ProgressBar x:Name="Battery_ProgressBar" Margin="113,55,10,0" VerticalAlignment="Top" Value="50" Height="11" Foreground="#FF0078D7" FlowDirection="RightToLeft"/>
                            <wpfui:Card BorderThickness="1" Height="52" Margin="10,342,10,0" VerticalAlignment="Top" Background="#33F3E6E6" BorderBrush="#33000000" Padding="0,0,0,0">
                                <Label Foreground="{DynamicResource Button.Static.Background}" x:Name="textbbgg" Content="Чтобы продлить срок службы аккумулятора,&#xA;держите заряд не ниже 20% и не выше 80%." Margin="9" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0"/>
                            </wpfui:Card>
                            <lvc:CartesianChart Margin="10,92,10,202" AnimationsSpeed="00:00:00.1000000" ScrollVerticalTo="1">
                                <lvc:CartesianChart.BindingGroup>
                                    <BindingGroup/>
                                </lvc:CartesianChart.BindingGroup>
                                <lvc:CartesianChart.Series>
                                    <lvc:LineSeries Values="{Binding BatteryChar}" 
                                       StrokeThickness="2" 
                                       Stroke="#1C8FC5" 
                                       Fill="Transparent" 
                                       LineSmoothness="1" 
                                       PointGeometrySize="10"/>
                                </lvc:CartesianChart.Series>
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis IsMerged="True">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator StrokeThickness="1" StrokeDashArray="2" Stroke="#404F56"/>
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis IsMerged="True">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator StrokeThickness="1.5" StrokeDashArray="4" Stroke="#404F56"/>
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
