                        <Button x:Name="Back" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Width="74" Height="29" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="3" Click="Full_Close_Panel">
