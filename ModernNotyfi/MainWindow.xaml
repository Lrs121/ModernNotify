                            <Grid Margin="0,0,0,0">
                                <Label Foreground="{DynamicResource Button.Static.Background}"  FontFamily="./icons/Fonts/#Google Sans Medium" Content="Wi-Fi" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Width="32" Height="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0"/>
                                <wpfui:Icon Foreground="{DynamicResource Button.Static.Background}" Glyph="Wifi224" FontSize="40" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            </Grid>
                        </wpfui:Card>
                    </ToggleButton>
