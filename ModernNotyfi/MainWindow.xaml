<Window x:Name="ModernNotyfi" x:Class="ModernNotyfi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ModernNotyfi"
        Title="ModernNotyfi" Height="500" Width="360" WindowStyle="None" Deactivated="ModernNotyfi_Deactivated" Foreground="{x:Null}" Visibility="Visible"
        AllowsTransparency="True" Loaded="ModernNotyfi_Loaded"
        xmlns:ui="http://schemas.modernwpf.com/2019">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0"/>
    </Window.Background>
    <Grid Grid.IsSharedSizeScope="True" MouseDown="Grid_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="ModernNotify Developer" HorizontalAlignment="Left" Margin="10,510,0,-36" VerticalAlignment="Top" Height="26" Width="340" Foreground="White" FontSize="12" VerticalContentAlignment="Center"/>
        <Border x:Name="Border_Time" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="51" Margin="10,439,0,0" VerticalAlignment="Top" Width="340" CornerRadius="15">
            <Border.Background>
                <SolidColorBrush Color="#fff" Opacity="0.7"/>
            </Border.Background>
            <Grid>
                <Label x:Name="DateTimeText" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="29" Width="60" FontSize="20" FontWeight="Bold" Padding="5,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
                <Label x:Name="DateTimeText_sec" Content="" HorizontalAlignment="Left" Margin="71,11,0,0" VerticalAlignment="Top" Height="29" Width="65" FontWeight="Bold" Padding="0,0,0,3" VerticalContentAlignment="Bottom"/>

                <Button x:Name="Settings_Open" HorizontalAlignment="Left" Margin="298,10,0,0" VerticalAlignment="Top" Width="30" Height="29" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="3" Click="Settings_Open_Click">
                    <Image HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="20" Source="icons/settings.png"/>
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Shutdown_Open" HorizontalAlignment="Left" Margin="268,10,0,0" VerticalAlignment="Top" Width="30" Height="29" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="3" Click="Shutdown_Open_Panel">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                    <Image HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="20" Source="icons/shutdown.png"/>
                </Button>
            </Grid>
        </Border>
        <Border x:Name="Border_Panel" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="73" Margin="10,361,0,0" VerticalAlignment="Top" Width="340" CornerRadius="15">
            <Border.Background>
                <SolidColorBrush Color="#fff" Opacity="0.7"/>
            </Border.Background>
            <Grid>
                <Button x:Name="Wifi_settings" FontFamily="Century Gothic" Foreground="{x:Null}" Background="{x:Null}" BorderThickness="0" Padding="0" Margin="10,7,0,8" Height="56" Width="107" BorderBrush="{x:Null}" Cursor="Hand" Click="Wifi_settings_Click">
                    <Border CornerRadius="10"  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="104" Background="#FFB4C1DA">
                        <Grid>
                            <Label Content="Интернет" HorizontalAlignment="Left" Margin="27,10,0,0" VerticalAlignment="Top" Width="75" Foreground="Black" Height="24"/>
                            <Image HorizontalAlignment="Left" Height="19" Margin="5,10,0,0" VerticalAlignment="Top" Width="17" Source="icons/wifi.png"/>
                        </Grid>
                    </Border>
                </Button>
                <Button x:Name="Audio_settings" FontFamily="Century Gothic" Foreground="{x:Null}" Background="{x:Null}" BorderThickness="0" Padding="0" Margin="122,8,0,8" Height="55" Width="105" BorderBrush="{x:Null}" Cursor="Hand" Click="On_OFF_Audio">
                    <Border x:Name="Audio_settings_Color" CornerRadius="10"  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="104" Background="CornflowerBlue">
                        <Grid>
                            <Label x:Name="Audio_Settinds_text" Content="Звук" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" Width="41" Foreground="White"/>
                            <Image HorizontalAlignment="Left" Height="19" Margin="10,10,0,0" VerticalAlignment="Top" Width="17" Source="icons/sound.png"/>
                        </Grid>
                    </Border>
                </Button>
            </Grid>
        </Border>
        <Border x:Name="SoundBorder" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="70" Margin="10,0,0,144" VerticalAlignment="Bottom" Width="340" CornerRadius="15">
            <Border.Background>
                <SolidColorBrush Color="#fff" Opacity="0.7"/>
            </Border.Background>
            <Grid>
                <Label x:Name="SoundText" Content="Настройки звука" HorizontalAlignment="Left" Margin="19,10,0,0" FontSize="12" Height="16" VerticalAlignment="Top" Padding="0,0,5,0"/>
                <Slider x:Name="SoundSlider" Height="32" Margin="47,29,23,0" VerticalAlignment="Top" ValueChanged="SoundSlider_ValueChanged" Maximum="100" Width="270"/>
                <Image Height="26" VerticalAlignment="Top" Source="icons/sound.png" Margin="17,31,296,0"/>
                <Button x:Name="SoundDevice" Content="Колонки" HorizontalAlignment="Right" Margin="0,8,23,0" VerticalAlignment="Top" Width="181" FontSize="12" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Foreground="#FFA900CF" Background="{x:Null}" BorderBrush="{x:Null}" Height="22" Padding="3,0,3,3" Cursor="Hand" OpacityMask="#FFDE8686" Click="SoundDevice_Click"/>
                <ListBox x:Name="AudioDevice" Height="75" Margin="19,68,19,0" VerticalAlignment="Top" SelectedIndex="0" IsSynchronizedWithCurrentItem="False" Width="300" SelectionChanged="AudioDevice_SelectionChanged">

                </ListBox>

            </Grid>
        </Border>
        <Border x:Name="Border_Shutdown" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="125" Margin="141,323,0,0" VerticalAlignment="Top" Width="167" CornerRadius="5" Visibility="Hidden">
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>
            <Grid>
                <Menu Height="Auto" Margin="0">
                    <Grid Height="22" Width="155" PreviewMouseLeftButtonDown="Command_shutdown">
                        <Image Source="icons/shutdown_fluent.png" HorizontalAlignment="Left" Margin="0,2" Width="17"/>
                        <Label Content="Выключение ПК" Margin="17,0,-33,0" Padding="5,0,0,2"/>
                    </Grid>
                    <Grid Height="22" Width="155" PreviewMouseLeftButtonDown="Command_Restart">
                        <Image Source="icons/restart_fluent.png" HorizontalAlignment="Left" Margin="0,2" Width="17"/>
                        <Label Content="Перезагрузка ПК" Margin="17,0,-35,0" Padding="5,0,0,2"/>
                    </Grid>
                    <Grid Height="22" Width="155" PreviewMouseLeftButtonDown="Command_Exit">
                        <Image Source="icons/exit.png" HorizontalAlignment="Left" Margin="0,2" Width="17"/>
                        <Label Content="Выкл. панель" Margin="17,0,10,0" Padding="5,0,0,2"/>
                    </Grid>
                </Menu>
            </Grid>
        </Border>
        <Border x:Name="Border_Music" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="51" Margin="10,230,0,0" VerticalAlignment="Top" Width="340" CornerRadius="15">
            <Border.Background>
                <SolidColorBrush Color="#fff" Opacity="0.7"/>
            </Border.Background>
            <Grid>
                <Label x:Name="NowPlayning" Content="Текущее воспроизведение" HorizontalAlignment="Left" Margin="16,14,0,18" FontSize="14" Foreground="Black" Width="190"/>
                <Button x:Name="Play_Pause" HorizontalAlignment="Right" Margin="0,9,52,10" VerticalAlignment="Stretch" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="0" Width="30" Click="Play_Pause_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                    <Image HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="29" Source="icons/Media/play_pause.png"/>
                </Button>
                <Button x:Name="Music_Right" HorizontalAlignment="Right" Margin="0,9,18,10" VerticalAlignment="Stretch" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="0" Width="30" Opacity="0.95" Click="Music_Right_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                    <Image HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="29" Source="icons/Media/right.png"/>
                </Button>
                <Button x:Name="Music_Left" HorizontalAlignment="Right" Margin="0,9,88,10" VerticalAlignment="Stretch" Width="30" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Padding="0" Opacity="0.75" Click="Music_Left_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                    <Image HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="29" Source="icons/Media/left.png"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
